{
    "cli": {
        "version": ">= 16.30.0"
    },
    "build": {
        "production": {
            "android": {
                "buildType": "apk"
            }
        },
        "production-admin": {
            "extends": "production",
            "env": {
                "APP_TYPE": "admin"
            }
        },
        "production-delivery": {
            "extends": "production",
            "env": {
                "APP_TYPE": "delivery"
            }
        }
    }
}